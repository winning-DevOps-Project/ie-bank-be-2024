{
  "info": {
    "name": "IE Bank API Tests",
    "description": "Postman tests for the IE Bank API endpoints.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Home",
      "request": {
        "method": "GET",
        "url": "{{base_url}}/",
        "description": "Check if the backend is running."
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "pm.test('Response contains Welcome message', function () {",
              "    pm.expect(pm.response.text()).to.include('Welcome to IE Bank Backend!');",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Register User",
      "request": {
        "method": "POST",
        "url": "{{base_url}}/register/",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"username\": \"test_user\",\n    \"password\": \"Password123\",\n    \"password_2\": \"Password123\",\n    \"country\": \"US\"\n}"
        },
        "description": "Register a new user."
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 201', function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "pm.test('Response contains access token', function () {",
              "    pm.expect(pm.response.json()).to.have.property('access_token');",
              "});",
              "pm.environment.set('access_token', pm.response.json().access_token);"
            ]
          }
        }
      ]
    },
    {
      "name": "Login User",
      "request": {
        "method": "POST",
        "url": "{{base_url}}/login/",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"username\": \"test_user\",\n    \"password\": \"Password123\"\n}"
        },
        "description": "Login an existing user."
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 201', function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "pm.test('Response contains refresh token', function () {",
              "    pm.expect(pm.response.json()).to.have.property('refresh_token');",
              "});",
              "pm.environment.set('access_token', pm.response.json().access_token);"
            ]
          }
        }
      ]
    },
    {
      "name": "Deposit Money",
      "request": {
        "method": "POST",
        "url": "{{base_url}}/deposit/",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"account_number\": \"{{sender_account_number}}\",\n    \"amount\": 100\n}"
        },
        "description": "Deposit money into an account."
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "pm.test('Response contains deposit success message', function () {",
              "    pm.expect(pm.response.json().msg).to.eql('Deposit successful');",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "User Transactions",
      "request": {
        "method": "GET",
        "url": "{{base_url}}/user/transactions/",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          }
        ],
        "description": "Retrieve transactions for the logged-in user."
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "pm.test('Transactions are returned as an array', function () {",
              "    pm.expect(pm.response.json().transactions).to.be.an('array');",
              "});"
            ]
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000/api"
    },
    {
      "key": "access_token",
      "value": ""
    },
    {
      "key": "sender_account_number",
      "value": ""
    },
    {
      "key": "recipient_account_number",
      "value": ""
    }
  ]
}
