{
  "info": {
    "name": "IE Bank API Tests (Simplified)",
    "description": "Minimal Postman tests for IE Bank API endpoints.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Home",
      "request": {
        "method": "GET",
        "url": "{{base_url}}/",
        "description": "Check if the backend is running."
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Register User",
      "request": {
        "method": "POST",
        "url": "{{base_url}}/register/",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"username\": \"test_user_{{$timestamp}}\",\n    \"password\": \"Password123\",\n    \"password_2\": \"Password123\",\n    \"country\": \"US\"\n}"
        },
        "description": "Register a new user."
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('User registered successfully', function () {",
              "    pm.response.to.have.status(201);",
              "    pm.environment.set('username', 'test_user_{{$timestamp}}');",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Login User",
      "request": {
        "method": "POST",
        "url": "{{base_url}}/login/",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"username\": \"{{username}}\",\n    \"password\": \"Password123\"\n}"
        },
        "description": "Login an existing user."
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 201) {",
              "    pm.environment.set('access_token', pm.response.json().access_token);",
              "    pm.test('Login successful', function () {",
              "        pm.response.to.have.status(201);",
              "    });",
              "} else {",
              "    console.error('Login failed:', pm.response.json());",
              "    throw new Error('Login failed');",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "Create Account",
      "request": {
        "method": "POST",
        "url": "{{base_url}}/accounts/",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"name\": \"Savings Account\",\n    \"currency\": \"USD\",\n    \"country\": \"US\"\n}"
        },
        "description": "Create an account for the logged-in user."
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 201) {",
              "    pm.environment.set('sender_account_number', pm.response.json().account_number);",
              "    pm.test('Account created successfully', function () {",
              "        pm.response.to.have.status(201);",
              "    });",
              "} else {",
              "    console.error('Create account failed:', pm.response.json());",
              "    throw new Error('Failed to create account');",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "Deposit Money",
      "request": {
        "method": "POST",
        "url": "{{base_url}}/deposit/",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"account_number\": \"{{sender_account_number}}\",\n    \"amount\": 100\n}"
        },
        "description": "Deposit money into an account."
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "    pm.test('Deposit successful', function () {",
              "        pm.response.to.have.status(200);",
              "    });",
              "} else {",
              "    console.error('Deposit failed:', pm.response.json());",
              "    throw new Error('Failed to deposit money');",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "User Transactions",
      "request": {
        "method": "GET",
        "url": "{{base_url}}/user/transactions/",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          }
        ],
        "description": "Retrieve user transactions."
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "    pm.test('Transactions fetched successfully', function () {",
              "        pm.response.to.have.status(200);",
              "        pm.expect(pm.response.json().transactions).to.be.an('array');",
              "    });",
              "} else {",
              "    console.error('Fetch transactions failed:', pm.response.json());",
              "    throw new Error('Failed to fetch transactions');",
              "}"
            ]
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "https://Devopps-be-dev.azurewebsites.net/api"
    },
    {
      "key": "access_token",
      "value": ""
    },
    {
      "key": "sender_account_number",
      "value": ""
    }
  ]
}
